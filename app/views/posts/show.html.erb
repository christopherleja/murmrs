<h2><%= @post.content %></h2>
<br>
<p><%= link_to "#{@post.likes.count} likes", post_likes_path %></p>
<br>
    <ul>
    <% @post.comments.each do |comment| %>
        <li>
        <%= comment.comment %> 
        <%= link_to User.find(comment.user_id).username, user_path(comment.user_id) %>
        </li>
        <br>
    <% end%>
    </ul>
<br>
<%= button_to 'Like', like_post_path(@post), method: "POST" %>
<%= form_for [@post, Comment.new] do |f| %>
        <%= f.text_area :comment%> 
        <br>
        <%= f.submit 'Comment' %>
        <%end%>
<% if @current_user == @post.user %>
        <%= link_to 'Edit Murmr', edit_post_path(@post) %>
        <%= button_to "Delete Murmr", post_path(@post), :method => :delete %>
<%end%>

<%= link_to @post.user.username, @post.user %>
